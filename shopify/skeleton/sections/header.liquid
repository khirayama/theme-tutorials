{% schema %}
{
  "name": "t:sections.header.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.header.settings.title.label"
    }
  ]
}
{% endschema %}
<header>
  <nav>
    <a href="/">Shopify-Training</a>
    <a href="/cart">
      <span> CART({{ cart.item_count }}) </span>
    </a>
    {% if customer %}
      <a href="/account/logout">LOG OUT</a>
    {% else %}
      <a href="/account/login">LOG IN</a>
      <a href="/account/register">REGISTER</a>
    {% endif %}
    <div>
      <ul>
        {% for link in linklists['main-menu'].links %}
          <li>
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
              <div>
                <a href="{{ link.url }}">{{ link.title }}</a>
                <ul>
                  {% for childlink in linklists[child_list_handle].links %}
                    {% assign sub_list_handle = childlink.title | handleize %}
                    {% if linklists[sub_list_handle].links != blank %}
                      <li>
                        <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                        <ul>
                          {% for sublink in linklists[sub_list_handle].links %}
                            <li>
                              <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </li>
                    {% else %}
                      <li>
                        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            {% else %}
              <a href="{{ link.url }}">{{ link.title }}</a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
      <div>
        <a href="/cart">
          <span>
            <i>CART</i>
          </span>
          <span> CART({{ cart.item_count }}) </span>
        </a>
        <form>
          <div>
            <input type="text">
            <span>
              <button type="submit">SUBMIT</button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </nav>
</header>
