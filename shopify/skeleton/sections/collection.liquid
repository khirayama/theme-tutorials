{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "collection",
      "default": "frontpage",
      "id": "collection",
      "label": "Collection"
    }
  ]
}
{% endschema %}

<div>section json {{ section.settings | json }}</div>
{% assign collection = collections[section.settings.collection] %}
<h2>{{ collection.title }}</h2>
{% for product in collection.products %}
  <a href="{{ product.url }}">
    <p>{{ product.title }}</p>
    <p>{{ product.price | money }}</p>
  </a>
{% endfor %}
